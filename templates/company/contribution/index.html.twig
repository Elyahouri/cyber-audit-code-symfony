{% extends 'base.html.twig' %}

{% block title %}Contribution index{% endblock %}

{% block body %}
    <h1>Contribution index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>Year</th>
                <th>Amount</th>
                <th>Base</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contribution in contributions %}
            <tr>
                <td>{{ contribution.id }}</td>
                <td>{{ contribution.createdAt ? contribution.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contribution.year }}</td>
                <td>{{ contribution.amount }}</td>
                <td>{{ contribution.base }}</td>
                <td>
                    <a href="{{ path('app_company_contribution_show', {'id': contribution.id}) }}">show</a>
                    <a href="{{ path('app_company_contribution_edit', {'id': contribution.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_company_contribution_new') }}">Create new</a>
{% endblock %}
